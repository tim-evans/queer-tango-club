<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title><%= yield :title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body id="<%= controller.controller_name %>">
  <% if controller.controller_name == 'home' %>
    <%= yield %>
  <% else %>
    <header class="grid-frame">
      <div class="row align-justify">
        <h1 class="logo block">
          <%= link_to(root_path) do %>
            <span class="q">Queer</span>
            <span class="t">Tango</span>
            <span class="c">Club</span>
          <% end %>
        </h1>
        <div class="block align-right">
          <nav>
            <%= link_to('About', about_path) %>
            <%= link_to('Events', milongas_path) %>
            <%= link_to('Workshops', workshops_path) %>
          </nav>
        </div>
      </div>
      <% if content_for(:banner) %>
        <div class="row align-right banner">
          <div class="align-right">
            <%= yield(:banner) %>
          </div>
        </div>
      <% else %>
        <br>
      <% end %>
    </header>
    <main>
      <%= yield %>
    </main>
    <%= render partial: 'footer' %>
  <% end %>
</body>
</html>
