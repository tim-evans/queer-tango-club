<% content_for :title, "Queer Tango Club" %>

<header>
  <div class="grid-frame">
    <div class="row align-right">
      <nav>
        <%= link_to('About', about_path) %>
        <%= link_to('Events', milongas_path) %>
        <%= link_to('Workshops', workshops_path) %>
      </nav>
    </div>
  </div>
</header>
<main>
  <div class="grid-frame no-padding">
    <div class="row">
      <h1 class="logo">
        <span class="q">Queer</span>
        <span class="t">Tango</span>
        <span class="c">Club</span>
      </h1>
    </div>
    <div class="row align-right">
      <section id="upcoming-events">
        <h4 class="dark photo-overlay">Upcoming Events</h4><br>
        <% @upcoming.each do |event| %>
          <%= link_to event_path(event) do %>
            <h3 class="photo-overlay"><%= event.title %></h3>
          <% end %>
        <% end %>
      </section>
    </div>
  </div>
</main>
<%= render partial: 'footer' %>
<div class="hero-image">
  <%= image_tag("IMG_4024.jpg") %>
</div>
