<% content_for :title, "Sign In | Queer Tango Club" %>
<div class="frame card">
  <h2>Sign In</h2>
  <div class="flex-row half">
    <%= link_to omniauth_authorize_path(resource_name, 'google_oauth2'), class: 'button with-icon' do %>
      <%= icon('google') %> Sign in with Google
    <% end %>
  </div>
  <br>
  <div class="flex-row half">
    <%= link_to omniauth_authorize_path(resource_name, 'facebook'), class: 'button with-icon' do %>
      <%= icon('facebook') %> Sign in with Facebook
    <% end %>
  </div>
</div>
