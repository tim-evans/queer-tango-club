<section id="location">
  <div class="grid-frame">
    <h2><%= 'Location'.pluralize(locations.count) %></h2>
    <hr class="thick">
  </div>
  <% locations.each do |location| %>
    <div class="cover-photo" id="<%= location.slug %>">
      <img src="<%= location.photo.url %>" alt="<%= location.name %>" />
    </div>
    <div class="grid-frame">
      <div class="row">
        <aside class="half">
          <h5><%= link_to format_location_name(location.name), location.url %></h5>
          <%= location.address_line %><br>
          <% if location.extended_address %>
            <%= location.extended_address %><br>
          <% end %>
          <%= location.city %>, <%= location.region_code %> <%= location.postal_code %><br>
        </aside>
        <div class="half align-right">
          <a href="<%= location.directions_url %>"><%= icon("direction") %> Directions</a><br>
          <% if location.nearby_locations.present? %>
            <%= link_to location_path(location) do %>
              <%= icon("location") %> Nearby Caf&eacute;s
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</section>
