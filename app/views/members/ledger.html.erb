<% content_for :title, "Ledger for #{@event.title} | Queer Tango Club" %>
<br>
<div class="grid-frame">
  <section id="schedule">
    <h2><%= link_to(@event.title, event_path(@event)) %> <%= icon("right") %> <%= link_to(@event.is_a?(Workshop) ? "Sign Ups" : "Attendees", event_members_path(@event)) %> <%= icon("right") %> Ledger</h2>
    <% @event.sessions.order(starts_at: :asc).each do |session| %>
      <% if session.ticket_cost %>
        <h4 class="accordion" data-accordion="accordion-<%= session.id %>">
          <%= session.title.html_safe %> (<%= session.attendees.count %>) <%= icon("down") %>
        </h4>
        <hr>
        <div class="members" id="accordion-<%= session.id %>">
          <% if session.attendees.count > 0 %>
            <div class="table">
              <div class="table-header">
                <div class="row">
                  <div class="table-cell name">Name</div>
                  <div class="table-cell email">Email</div>
                  <div class="table-cell paid">Amount</div>
                </div>
              </div>
              <div class="table-body block">
                <% session.attendees.order(:created_at).each do |attendee| %>
                  <div class="row">
                    <div class="table-cell name-email"><%= mail_to(attendee.email, attendee.name) %></div>
                    <div class="table-cell paid">
                      <%= attendee.amount_paid.format %>
                    </div>
                  </div>
                <% end %>
              </div>
              <div class="table-footer block">
                <div class="row">
                  <div class="table-cell name-email"></div>
                  <div class="table-cell paid">
                    <%= session.income.format %>
                  </div>
                </div>
              </div>
            </div>
          <% else %>
            <br>
            <div class="smcp align-center"><%= icon('sad', class: 'empty-state') %></div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </section>
  <br>
  <br>
</div>
