<% content_for :title, "Events | Queer Tango Club" %>

<section>
  <div class="grid-frame">
    <h2>Events</h2>
    <hr class="thick">
  </div>
  <% @milongas.each do |event| %>
    <div class="event">
      <div class="cover-photo">
        <img src="<%= event.cover_photo.url(:original) %>" alt="<%= event.title %>"/>
      </div>
      <div class="grid-frame no-padding">
        <div class="align-bottom align-right">
          <%= link_to event_path(event) do %>
            <h3 class="photo-overlay"><%= event.title %></h3>
          <% end %>
          <div>
            <h6 class="photo-overlay">
              <%= format_date_range(event.starts_at, event.ends_at) %><br>
              <% if event.location %>
                <%= format_location_name(event.location.name) %>
              <% end %>
            </h6>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</section>
