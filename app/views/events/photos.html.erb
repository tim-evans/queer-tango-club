<% content_for :title, "#{@event.title} | Queer Tango Club" %>
<section class="grid-frame banner">
  <h2><%= link_to(@event.title, event_path(@event)) %> <%= icon("right") %> Photos</h2>
  <nav class="grid-frame align-right">
    <hr>
    <%= form_for @event.photos.build, html: { multipart: true } do |f| %>
      <%= f.hidden_field :event_id %>
      <%= f.file_field :attachment %>
      <button>Upload</button>
    <% end %>
    <hr>
  </nav>
</section>

<section id="photos">
  <div class="grid-frame">
    <% @photos.each do |photo| %>
      <div class="photo">
        <%= link_to(delete_photo_path(photo)) do %><%= icon("cancel-solid", title: "Delete Photo") %><% end %>
        <%= image_tag photo.src %>
      </div>
    <% end %>
  </div>
</section>
