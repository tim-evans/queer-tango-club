<% content_for :title, "Events | Queer Tango Club" %>

<section>
  <% if @events.upcoming.count > 0 || current_user %>
    <div class="frame">
      <% if current_user %>
        <nav>
          <h2>Events</h2>
          <hr>
          <%= link_to(new_event_path) do %>
            <%= icon("add-solid") %> Add Event
          <% end %>
        </nav>
      <% else %>
        <h2>Events</h2>
      <% end %>
      <hr class="thick">
      <br>
    </div>
    <% if current_user %>
      <% @events.draft.each do |event| %>
        <%= render partial: 'cover_photo', locals: { event: event } %>
      <% end %>
    <% end %>
    <% @events.upcoming.each do |event| %>
      <%= render partial: 'cover_photo', locals: { event: event } %>
    <% end %>
  <% end %>

  <div class="frame">
    <h2>Past Events</h2>
    <hr class="thick">
    <br>
  </div>
  <% @events.historical.each do |event| %>
    <%= render partial: 'cover_photo', locals: { event: event } %>
  <% end %>
</section>
