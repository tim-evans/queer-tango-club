<% content_for :facebook do %>
  <meta property="og:title" content="<%= @event.title %>" />
  <meta property="og:image" content="<%= @event.cover_photo.url(:original) %>" />
  <meta property="og:site_name" content="Queer Tango Club" />
  <meta property="og:description" content="<%= @event.description %>" />
<% end %>
<% content_for :title, "#{@event.title} | Queer Tango Club" %>

<section class="grid-frame">
  <h1><%= @event.title %></h1>
  <%= format_date_range(@event.starts_at, @event.ends_at) %><br>
  <%= @event.location.name %>
  <% if current_user %>
    <%= link_to members_event_path(@event) do %>
      <%= icon("person") %> Members
    <% end %>
  <% end %>
</section>

<%= render partial: 'schedule', locals: { event: @event } %>
<%= render partial: 'guests', locals: { guests: @event.guests } %>

<% if @event.locations.present? %>
  <div class="grid-frame">
    <h2><%= 'Location'.pluralize(@event.locations.count) %></h2>
    <hr class="thick">
  </div>
<% end %>
<% @event.locations.each do |location| %>
  <%= render partial: 'location', locals: { location: location } %>
<% end %>

<% if @event.photos %>
  <section id="photos">
  </section>
<% end %>
